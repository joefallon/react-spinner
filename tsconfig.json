{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "jsx": "react",
    "inlineSourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}